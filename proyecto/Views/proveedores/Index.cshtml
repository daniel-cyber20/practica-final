@model IEnumerable<proyecto.Models.proveedores>

@{
    ViewBag.Title = "Index";
}

<h2>Inicio de la vista Proveedores</h2>

<p>
    <h4>   @Html.ActionLink("Create New", "Create")</h4>

    <h4> @Html.ActionLink("Impresion ", "Imprimir")</h4>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.cedula)
        </th>

        <th>
